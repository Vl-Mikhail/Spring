<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="ru.misha.model.Message" table="messages">
        <id name="id">
            <column name="uid" sql-type="integer"/>
            <generator class="identity"/>
        </id>
        <many-to-one name="client" column="user_id" class="ru.misha.model.Client" cascade="all"/>
        <property name="text">
            <column name="text" sql-type="varchar" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>